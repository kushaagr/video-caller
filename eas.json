{
  "cli": {
    "version": ">= 10.1.1"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal"
    },

    "preview": {
      "distribution": "internal"
    },

    "production": {},

    "base": {
      "android": {
        "env": {
          "PLATFORM": "android"
        }
      },
      "ios": {
        "env": {
          "PLATFORM": "ios"
        }
      }
    },

    "staging": {
      "extends": "base",
      "env": {
        "ENVIRONMENT": "staging"
      },
      "distribution": "internal",
      "android": {
        "buildType": "apk"
      }
    }

  },

  "submit": {
    "production": {}
  }
}